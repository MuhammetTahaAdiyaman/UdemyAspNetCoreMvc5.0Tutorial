@model FileInfo[]
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" asp-controller="File">Create</a>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Oluşturma Tarihi</th>
            <th>Path</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CreationTime</td>
                <td>@item.FullName</td>
                <td><a asp-action="Remove" asp-controller="File" asp-route-fileName="@item.Name">Remove</a></td>
            </tr>
        }
    </tbody>
</table>